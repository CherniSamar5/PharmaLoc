<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F5F4"
    android:padding="20dp">


    <ImageView
        android:layout_width="344dp"
        android:layout_height="180dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/loginpicture" />

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:text="Welcome"
        android:textStyle="bold"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/email_edittext"
        android:layout_width="378dp"
        android:layout_height="48dp"
        android:layout_below="@+id/title_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:hint="email"
        android:inputType="textEmailAddress"
        />


    <EditText
        android:id="@+id/password_edittext"
        android:layout_width="374dp"
        android:layout_height="48dp"
        android:layout_below="@+id/email_edittext"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:hint="Password"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/forgot_password_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_button"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-96dp"
        android:layout_marginEnd="5dp"
        android:text="Forgot password?" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_edittext"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="61dp"

        android:backgroundTint="#1A998E"
        android:text="Login" />

    <TextView
        android:id="@+id/orloginwithtext"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/login_button"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="19dp"
        android:layout_marginBottom="0dp"
        android:text="Or login with"
        android:textAlignment="center"
        android:textSize="20dp" />

    <Button
        android:id="@+id/googlelogin_button"
        android:layout_width="372dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forgot_password_text"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="152dp"
        android:layout_marginRight="19dp"
        android:background="@drawable/button_border_black"
        android:backgroundTint="#E8F5F4"
        android:text="Google"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/registertext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/googlelogin_button"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:text="Don't have an account yet? Register here" />

</RelativeLayout>