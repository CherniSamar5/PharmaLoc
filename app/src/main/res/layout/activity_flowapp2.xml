<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Flowapp2"
    android:background="#E8F5F4"
    android:padding="20dp">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:orientation="horizontal"
        android:layout_marginStart="10dp">


        <ImageView
            android:id="@+id/bare2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="94dp"
            android:src="@drawable/baremedical2" />

        <ImageView
            android:id="@+id/bare3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baremedical2"
            android:layout_marginStart="10dp" />
        <ImageView
            android:id="@+id/bare1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:src="@drawable/baremedical"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="274dp"
        android:layout_height="61dp"
        android:layout_below="@id/linearLayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="113dp"
        android:text="Get Started"
        android:textSize="35dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Description"
        android:layout_width="375dp"
        android:layout_height="60dp"
        android:layout_below="@id/tvHeader"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="15dp"
        android:gravity="center"
        android:text="Join our community and get access to thousands of pharmacies"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/startpicture"
        android:layout_width="wrap_content"
        android:layout_height="387dp"
        android:layout_below="@+id/Description"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-3dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="143dp"
        android:src="@drawable/launching" />


        <Button
            android:id="@+id/logintoexistingaccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Login to existing account"
            android:textSize="15sp"
            android:layout_below="@+id/startpicture"
            android:layout_marginTop="-130dp"
            android:backgroundTint="#1A998E"
            />

    <Button
        android:id="@+id/registernewaccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Register new account"
        android:textSize="15sp"
        android:background="@drawable/button_border_black"
        android:textColor="#1A998E"
        android:layout_below="@+id/logintoexistingaccount" />




</RelativeLayout>